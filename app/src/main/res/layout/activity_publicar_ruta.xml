<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    tools:context="androiddeveloper.eder.padilla.hackcentrofox.PublicarRutaActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.seatgeek.placesautocomplete.PlacesAutocompleteTextView
        android:id="@+id/autocomplete_maps"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dimen_30dp"
        android:layout_marginRight="@dimen/dimen_30dp"
        android:layout_marginTop="20dp"
        android:paddingStart="@dimen/dimen_10dp"
        android:paddingEnd="@dimen/dimen_10dp"
        android:background="@drawable/et_background"
        android:hint="@string/hint_first_address"
        android:textStyle="bold"
        android:inputType="text"
        style="@style/AppTheme_places"
        android:imeOptions="actionNext"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:maxLines="2"
        android:textSize="14sp"
        app:pacv_googleMapsApiKey="@string/GOOGLE_KEY"
        app:pacv_languageCode="es" />
    <com.seatgeek.placesautocomplete.PlacesAutocompleteTextView
        android:id="@+id/autocomplete_maps_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dimen_30dp"
        android:layout_marginRight="@dimen/dimen_30dp"
        android:layout_marginTop="20dp"
        android:paddingStart="@dimen/dimen_10dp"
        android:paddingEnd="@dimen/dimen_10dp"
        android:hint="@string/hint_first_address"
        android:textStyle="bold"
        android:background="@drawable/et_background"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:maxLines="2"
        style="@style/AppTheme_places"
        android:textSize="14sp"
        app:pacv_googleMapsApiKey="@string/GOOGLE_KEY"
        app:pacv_languageCode="es" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dimen_30dp"
        android:layout_marginRight="@dimen/dimen_30dp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:elevation="@dimen/dimen_10dp"
        android:textSize="18sp"
        android:clickable="true"
        android:id="@+id/btn_fecha"
        android:layout_gravity="center"
        android:background="@drawable/access_button_ripple"
        android:text="Fecha"/>
</LinearLayout>
</ScrollView>
